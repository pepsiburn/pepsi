function normalizeNumber(inputNumber) {
    var workNumber = inputNumber.replace(new RegExp( "\\" + GLOBAL_NUMBER_GROUP_SEPARATOR, "g" ), "");
    workNumber = workNumber.replace(new RegExp( "\\" + GLOBAL_NUMBER_DECIMAL_SEPARATOR, "g" ), ".");
    return workNumber;
}

